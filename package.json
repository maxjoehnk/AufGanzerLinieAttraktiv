{
  "name": "twitter-wordcloud",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "watch": "parcel watch src/index.html",
    "build": "parcel build src/index.html --no-source-maps --public-url ./",
    "deploy": "now --public -e TWITTER_CONSUMER_KEY=@consumer-key -e TWITTER_CONSUMER_SECRET=@consumer-secret -e TWITTER_APPLICATION_TOKEN=@bearer-token"
  },
  "devDependencies": {
    "glslify-bundle": "^5.0.0",
    "glslify-deps": "^1.3.0",
    "node-sass": "^4.9.0",
    "now": "^11.1.15",
    "parcel": "^1.8.1"
  },
  "dependencies": {
    "async-service-builder": "^1.0.0",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "express": "^4.17.3",
    "gl-shader": "^4.2.1",
    "gl-texture2d": "^2.1.0",
    "twitter": "^1.7.1",
    "wordcloud": "^1.1.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ]
}
